		<?php if (count($_items)):?>		<div class="box-collateral box-reviews" id="customer-reviews">				<div class="ratingTitle">								<div class="ratings">						<div class="rating-box rating-big">							<div class="rating" style="width:<?php echo $precentE ?>%"></div>						</div>					</div>						</div>				<div class="review_list_ranking">					<?php foreach ($_items as $_review):?>						<div class="comments rev_block">								<?php $_votes = $_review->getRatingVotes(); ?>								<?php if (count($_votes)): ?>									<div class="review-box">										<?php foreach ($_votes as $_vote): ?>											<div class="price-rate-wrap">												<div class="rating-box">													<div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>												</div>											</div>										<?php endforeach; ?>									</div>								<?php endif; ?>													<div class="rate-name-wrap">																<div class="rating-date"><?php echo $this->escapeHtml($_review->getNickname()); ?> <?php echo $this->__('on'); ?> <?php echo $this->formatDate($_review->getCreatedAt(), 'short') ?></div>							</div>							<div class="rating-details"> 								<div class="rate-title"><?php echo $this->escapeHtml($_review->getTitle()) ?></div>								<div class="rate-review"><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></div>							</div>										</div>					<?php endforeach; ?>					<?php if(count($_items) > 2): ?>					<div class="comments comments-btn">						<a class="rate-btn-2 rate-btn" id="loadMore" href="javascript:void(0);"><?php echo $this->__('All Ranking'); ?> >></a>					</div>					<?php endif; ?>				</div>		</div>		<?php endif; ?>		
</div><script type="text/javascript">	$j(".review_list_ranking .rev_block").hide();	size = $j(".review_list_ranking .rev_block").size();    x=2;    $j('.review_list_ranking .rev_block:lt('+x+')').css('display','inline-block');    $j('#loadMore').click(function () {        x= (x+2 <= size) ? x+2 : size;        $j('.review_list_ranking .rev_block:lt('+x+')').show();    });</script>