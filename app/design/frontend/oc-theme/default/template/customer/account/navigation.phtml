<div class="block block-account">
	<label class="block-title">
        <?php echo $this->__('My Account'); ?>
		<i class="fa fa-chevron-down" aria-hidden="true"></i>
    </label>
    <div class="block-content">
        <ul>
            <?php $_links = $this->getLinks(); ?>
            <?php $_index = 1; ?>
            <?php $_count = count($_links); ?>
            <?php foreach ($_links as $_link): ?>
                <?php $_last = ($_index++ >= $_count); ?>
                <?php if ($this->isActive($_link)): ?>
                    <li class="current<?php echo ($_last ? ' last' : '') ?>"><a href="<?php echo $_link->getUrl() ?>"><strong><?php echo $_link->getLabel() ?></strong></a></li>
                <?php else: ?>
                    <li<?php echo ($_last ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></li>
                <?php endif; ?>
            <?php endforeach; ?>
			<li><a href="<?php echo $this->getUrl(); ?>customer/account/logout"><?php echo $this->__('Log Out'); ?></a></li>
        </ul>
    </div>
</div>
		<script type="text/javascript">
		$j('.block-account .block-title').click(function() {
			var subEL = $j(this).next('.block-content');
			$j(this).addClass('active');
			if(subEL.is(':hidden')){
				subEL.slideDown();
				$j(this).addClass('active');	
			}
			else{
				subEL.slideUp();
				$j(this).removeClass('active');		
			}	
		});	
		</script>