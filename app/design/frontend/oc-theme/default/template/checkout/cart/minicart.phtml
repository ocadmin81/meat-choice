ancybox({		'hideOnContentClick': true,		maxWidth:600	});			$j( "a.ajax-c" ).click(function() {		var url = $j(this).attr('data-href');		$j.fancybox({			hideOnContentClick : true,			type: 'iframe',			maxWidth: 350,					href: url		});	});		</script>