<?php echo $_product->getId(); ?>">-</a>				</div>														<div class="num">					<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $_GET["real_qty"]; ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty qty-real hidden" />									<input type="text" maxlength="12" value="<?php echo $num; ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty qty-num" />					<span><?php echo $title; ?></span>				</div>				<div class="btn-wrap">					<a href="javascript:void(0);" class="qty_inc" data-jump="<?php echo $default_qty; ?>" data-jump-real="<?php echo $default_qty_real; ?>" id="qty-inc-<?php echo $_product->getId(); ?>">+</a>				</div>			</div>		</div>        <div class="add-to-cart-buttons">            <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>			<?php echo $this->getChildHtml('', true, true) ?>        </div>    </div><?php endif; ?><script type="text/javascript">	$j(document).ready(function(){		$j(".qty_dic").click(function(){			var jump = +$j(this).attr('data-jump');			var jumpR = +$j(this).attr('data-jump-real');			var kg = $j(this).parent().parent().hasClass("add-kg");			if(jump % 1 == 0)				var Fixed = 0;			else				var Fixed = 1;			if(jumpR % 1 == 0)				var FixedR = 0;			else				var FixedR = 1;				if(kg)				var jumpN = jump;			else				var jumpN = 1;						if($j(this).parent().parent().find("input.qty-num").val() > jumpN){				$j(this).parent().parent().find("input.qty-num").val((+$j(this).parent().parent().find("input.qty-num").val() - jumpN).toFixed(Fixed) || 0);				$j('.product-options .option.qty-units dd textarea').val((+$j('.product-options .option.qty-units dd textarea').val() - 1) || 0);				$j(this).parent().parent().find("input.qty-real").val((+$j(this).parent().parent().find("input.qty-real").val() - jumpR).toFixed(FixedR) || 0);			}		});		$j(".qty_inc").click(function(){				var jump = +$j(this).attr('data-jump');			var jumpR = +$j(this).attr('data-jump-real');			var kg = $j(this).parent().parent().hasClass("add-kg");			if(jump % 1 == 0)				var Fixed = 0;			else				var Fixed = 1;			if(jumpR % 1 == 0)				var FixedR = 0;			else				var FixedR = 1;							if(kg)				var jumpN = jump;			else				var jumpN = 1;							$j(this).parent().parent().find("input.qty-num").val((+$j(this).parent().parent().find("input.qty-num").val() + jumpN).toFixed(Fixed) || 0);			$j('.product-options .option.qty-units dd textarea').val((+$j('.product-options .option.qty-units dd textarea').val() + 1) || 0);			$j(this).parent().parent().find("input.qty-real").val((+$j(this).parent().parent().find("input.qty-real").val() + jumpR).toFixed(FixedR) || 0);		});	});</script>