<?php $path = $_SERVER['REQUEST_URI']; ?><?php $urlP = strtok($path, '?'); ?><?php $Cpath = str_replace('/', '', $urlP); ?><?php$storeId = Mage::app()->getStore()->getId();$about = Mage::getModel('cms/block')->setStoreId($storeId)->load("about-menu");$information = Mage::getModel('cms/block')->setStoreId($storeId)->load("information-center-menu");$tours = Mage::getModel('cms/block')->setStoreId($storeId)->load("factory-tours-and-workshop-menu");$contact = Mage::getModel('cms/block')->setStoreId($storeId)->load("contact-menu");?><div class="side_menu">	<h2><?php echo $this->__('Menu'); ?></h2>	<div class="side_menu_content">		<div class="mat-links-box">			<h3><?php echo $about->getTitle(); ?></h3>			<?php echo $about->getContent(); ?>		</div>		<div class="mat-links-box">			<h3><?php echo $information->getTitle(); ?></h3>			<?php echo $information->getContent(); ?>		</div>		<div class="mat-links-box">			<a href="<?php echo $this->getUrl().$tours->getLink(); ?>"><h3><?php echo $tours->getTitle(); ?></h3></a>		</div>		<div class="mat-links-box">			<a href="<?php echo $this->getUrl().$contact->getLink(); ?>"><h3><?php echo $contact->getTitle(); ?></h3></a>		</div>		</div></div><?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('side_menu')->toHtml(); ?><script type="text/javascript">	$j( document ).ready(function() {		$j( ".side_menu li" ).each(function( index ) {							var classN = $j(this).attr('class');			if('<?php echo $Cpath; ?>' == classN)				$j(this).addClass('active');		});	});	$j('.side_menu h2').click(function() {			var subEL = $j(this).next('.side_menu_content');			if(subEL.is(':hidden')){			subEL.slideDown();				$j(this).addClass('active');							}			else{				subEL.slideUp();				$j(this).removeClass('active');					}		});	</script>