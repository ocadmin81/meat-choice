<?php $id = Mage::getStoreConfig('webthemeoptions/homecats/catid');$idLoad = Mage::getStoreConfig('webthemeoptions/homecats/firstcatid');$cat = Mage::getModel('catalog/category')->load($id);$subcats = $cat->getChildrenCategories();$products = Mage::getModel('catalog/category')->load($idLoad)	->getProductCollection()	->addAttributeToSelect('*')	->addAttributeToFilter('status', 1)	->addAttributeToFilter('visibility', 4);$storeId = Mage::app()->getStore()->getStoreId();$productBlock = $this->getLayout()->createBlock('catalog/product_price');  $customerId = null;$wishlist = null;if (Mage::getSingleton('customer/session')->isLoggedIn()) {    $customer = Mage::getSingleton('customer/session')->getCustomer();    $customerId = $customer->getId();}if (isset($customerId) && $customerId) {    $wishlist = Mage::getModel('wishlist/wishlist')->loadByCustomer($customerId, true);}               ?><div class="blog-home home-block">	<div class="title">		<h3><?php echo $cat->getName(); ?></h3>		</div>	<div class="home-blog-content container">		<?php $i = 0; ?>		<div class="owl-tabs">			<ul class="tabs-headers">				<?php foreach ($subcats as $_category): ?>												<li <?php if($i==0): ?>class="active"<?php endif; ?> onclick="LoadPosts('<?php echo $_category->getId(); ?>','cat-tab-<?php echo $_category->getId(); ?>')" id="cat-tab-<?php echo $_category->getId(); ?>">						<span><?php echo $_category->getName(); ?></span>					</li>									<?php $i++; ?>				<?php endforeach; ?>			</ul>					</div>		<div class="tabs-contant product-grid">			<div id="owl-blog" class="owl-carousel">			<?php foreach ($products as $_product): ?>						<div class="item">									<div class="image-block">										<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image">											<div class="RegImg">												<img id="product-collection-image-<?php echo $_product->getId(); ?>" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(336, 259); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />											</div>																	</a>											<div class="cart-block">											<?php if($_product->isSaleable()): ?>												<a href="javascript:void(0);" data-href="<?php echo $this->getUrl('ajax/product/view/id/' . $_product->getId()) ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>" class="ajax quick-view"><?php echo $this->__('Add to Cart') ?> >></a>											<?php endif; ?>																		</div>																</div>                 									<div class="product-info">															<h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_product->getName() ?></a></h2>										<?php echo $productBlock->getPriceHtml($_product, true) ?>														</div>												</div>			<?php endforeach; ?>			</div>		</div>			</div> </div>   	<script type="text/javascript">	$j( document ).ready(function() {		$j("#owl-blog").owlCarousel({			nav:true,			autoplay : false,			autoplayHoverPause : true,			singleItem:true,			pagination:false,			navigation:true,			lazyLoad : false,			loop:false,			dots:false,			rtl:true,			margin : 30,			responsive:{				0:{					items:2				},				767:{					items:3				},								992:{					items:4				}			}		});		});	</script> <script type="text/javascript">	function LoadPosts(catId,tabId){		$j('.owl-tabs .tabs-headers li').removeClass('active');		$j('#'+tabId).addClass('active');		var Url = '<?php echo $this->getUrl("ajaxcartsuper/index/cat") ?>';		$j.ajax({  			type: 'POST', 			dataType: 'json',						url: Url,			data: {catId:catId},			success: function(response) {				$j('.tabs-contant')[0].update(response);					$j('#carousel-'+catId).owlCarousel({						nav:true,						autoplay : false,						autoplayHoverPause : true,						singleItem:true,						pagination:false,						navigation:true,						lazyLoad : false,						loop:false,						dots:false,						rtl:true,						margin : 30,						responsive:{							0:{								items:2							},							767:{								items:3							},											992:{								items:4							}						}					});								}		});	}</script>	