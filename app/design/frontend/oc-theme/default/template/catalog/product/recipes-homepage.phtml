<?php $id = Mage::getStoreConfig('webthemeoptions/homere/catid');$cat = Mage::getModel('catalog/category')->load($id);$products = Mage::getModel('catalog/category')->load($id)	->getProductCollection()	->addAttributeToSelect('*')	->addAttributeToFilter('status', 1)	->addAttributeToFilter('visibility', 4);           ?><div class="blog-home home-block">	<div class="title">		<h3><?php echo $cat->getName(); ?></h3>		<a href="<?php echo $cat->getUrl(); ?>"><?php echo $this->__('Show All'); ?> >></a>	</div>	<div class="home-blog-content container">		<div class="tabs-contant product-grid">			<div id="owl-recipes" class="owl-carousel">			<?php foreach ($products as $_product): ?>						<div class="item">							<div class="product-image-basket">								<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>" class="product-image">									<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(337,365); ?>" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" />								</a>							</div>								<div class="name-price">								<p class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $_product->getName(); ?></a></p>								<a class="read-re" href="<?php echo $_product->getProductUrl() ?>"><?php echo $this->__('Read Recipe'); ?> >></a>							</div>													</div>			<?php endforeach; ?>			</div>		</div>			</div> </div>   	<script type="text/javascript">	$j( document ).ready(function() {		$j("#owl-recipes").owlCarousel({			nav:true,			autoplay : false,			autoplayHoverPause : true,			singleItem:true,			pagination:false,			navigation:true,			lazyLoad : false,			loop:true,			dots:false,			rtl:true,			margin : 30,			responsive:{				0:{					items:2				},				767:{					items:3				},								992:{					items:4				}			}		});		});	</script> 