<?php $mediaDir = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB, true) . 'media/theme/';$mediaDirCat = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB, true) . 'media/';$firstblogcatload = Mage::getStoreConfig('themeoptions/general/firstblogcatload');$cat_posts_first = explode(",",$firstblogcatload);$connection = Mage::getSingleton('core/resource')->getConnection('core_write');$prefix = Mage::getConfig()->getTablePrefix();$tblname=$prefix.'aw_blog_cat';$tblname1=$prefix.'aw_blog';$homeBlogTitle = Mage::getStoreConfig('webthemeoptions/blog/title');$homeBlogTitleText = Mage::getStoreConfig('webthemeoptions/blog/titletext');$homeBlogSubTitle = Mage::getStoreConfig('webthemeoptions/blog/subtitle');$posts = Mage::getModel('blog/blog')	->getCollection()	->addPresentFilter()	->addStoreFilter(Mage::app()->getStore()->getId())	->addFieldToFilter('status', 1)	->addFieldToFilter('in_home', 1);if(count($posts)):                    ?><div class="blog-home home-block">	<div class="title">		<?php if($homeBlogTitle): ?>			<img src="<?php echo $mediaDir.$homeBlogTitle; ?>" />		<?php else: ?>			<h3><?php echo $homeBlogTitleText; ?></h3>		<?php endif; ?>				<div class="subtitle"><?php echo $homeBlogSubTitle; ?></div>	</div>	<div class="home-blog-content container">		<?php $sql1 = $connection->query("select title,icon,home_posts,cat_id from $tblname where home=1"); ?>		<?php $i = 0; ?>		<div class="owl-tabs">			<ul class="tabs-headers">				<?php while($row1 = $sql1->fetch()): ?>					<?php $cat_post = $row1['home_posts']; ?>													<li <?php if($i==0): ?>class="active"<?php endif; ?> onclick="LoadPosts('<?php echo $cat_post; ?>','<?php echo $row1['cat_id']; ?>','cat-tab-<?php echo $row1['cat_id'] ?>')" id="cat-tab-<?php echo $row1['cat_id']; ?>">						<img src="<?php echo $mediaDirCat.$row1['icon']; ?>" />						<span><?php echo $row1['title']; ?></span>					</li>									<?php $i++; ?>				<?php endwhile; ?>			</ul>					</div>		<div class="tabs-contant">			<div class="slick-carousel-blog">			<?php foreach ($posts as $post): ?>				<?php $bUrl = $this->getUrl().'recipes/'.$post->getIdentifier(); ?>				<div class="item">					<div class="post-img">						<a href="<?php echo $bUrl; ?>"><img src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA).$post->getThumbnail() ?>" alt="<?php echo $post->getTitle(); ?>" /></a>						<div class="post-details">							<ul>								<?php if($post->getCooking_type() != ''): ?>									<li class="cooking_type"><?php echo $this->__('Cooking Type').': '.$this->__($post->getCooking_type()); ?></li>								<?php endif; ?>								<?php if($post->getMakingTime() != ''): ?>									<li class="making_time"><?php echo $this->__('Making Time').': '.$this->__($post->getMakingTime()).' '.$this->__('minutes'); ?></li>								<?php endif; ?>							</ul>						</div>					</div>					<div class="name"><a href="<?php echo $bUrl; ?>"><?php echo $post->getTitle(); ?></a></div>									</div>			<?php endforeach; ?>			</div>		</div>			</div> </div>   	<script type="text/javascript">	$j( document ).ready(function() {		$j(".slick-carousel-blog").slick({			centerMode: false,			centerPadding: '50px',			rtl: true,			arrows: true		});		});	</script> <script type="text/javascript">	function LoadPosts(posts,catId,tabId){		$j('.owl-tabs .tabs-headers li').removeClass('active');		$j('#'+tabId).addClass('active');		var Url = '<?php echo $this->getUrl("blog/post/load") ?>';		$j.ajax({  			type: 'POST', 			dataType: 'json',						url: Url,			data: {postsUse:posts,catId:catId},			success: function(response) {				$j('.tabs-contant')[0].update(response);					$j('#carousel-'+catId).slick({						centerMode: false,						centerPadding: '50px',						rtl: true,						arrows: true					});								}		});	}</script>	<?php endif;?>