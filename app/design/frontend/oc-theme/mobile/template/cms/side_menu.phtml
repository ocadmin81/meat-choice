<?php $path = $_SERVER['REQUEST_URI']; ?><?php $urlP = strtok($path, '?'); ?><?php $Cpath = str_replace('/', '', $urlP); ?><?php$storeId = Mage::app()->getStore()->getId();$staticBar = Mage::getModel('cms/block')->setStoreId($storeId)->load("static-menu");?><div class="side_menu">	<div class="menu-title"><?php echo $this->__('Menu'); ?></div>	<div class="side_menu_content">		<div class="mat-links-box">			<?php echo $staticBar->getContent(); ?>		</div>	</div></div><?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('side_menu')->toHtml(); ?><script type="text/javascript">	$j( document ).ready(function() {		$j( ".side_menu li" ).each(function( index ) {							var classN = $j(this).attr('class');			if('<?php echo $Cpath; ?>' == classN)				$j(this).addClass('active');		});	});	$j('.side_menu .menu-title').click(function() {			var subEL = $j(this).next('.side_menu_content');			if(subEL.is(':hidden')){			subEL.slideDown();				$j(this).addClass('active');							}			else{				subEL.slideUp();				$j(this).removeClass('active');					}		});	</script>